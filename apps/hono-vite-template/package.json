{
  "name": "hono-vite-template",
  "type": "module",
  "version": "0.0.1",
  "_scripts": {
    "dev:all": "concurrently \"pnpm db:studio\" \"pnpm dev\"",
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "npm run lint --fix",
    "test": "cross-env NODE_ENV=test vitest",
    "build": "tsc && tsc-alias && pnpm db:push && pnpm build:vite",
    "db:generate": "pnpm drizzle-kit generate",
    "db:migrate": "pnpm drizzle-kit migrate",
    "db:push": "pnpm drizzle-kit push",
    "auth:generate": "pnpx @better-auth/cli generate --yes --output src/db/betterauth-schema.ts",
    "db:studio": "pnpm drizzle-kit studio",
    "shadcn:zerocn": "pnpm shadcn add https://zerocn.zeroopensource.org/r/all.json",
    "shadcn": "shadcn",
    "dev:vite": "vite",
    "build:vite": "vite build",
    "serve:vite": "serve ./dist/vite"
  },
  "dependencies": {
