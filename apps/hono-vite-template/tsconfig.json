{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@/root/*": ["./*"],
      "@/src/*": ["./src/*"],
      "@/shadcn/*": ["./src/shadcn/*"],
      "fumadocs-mdx:collections/*": [".source/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "vite/client"],
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
